@page "/dropdownlist/templates"

@using TelerikBlazor.Shared

<TelerikDropDownList TItem="Product" T="string" Height="40" Data="@DropDownListData" ValueField="ProductId" TextField="ProductName">
    <Header>
        <div class="k-group-header" style="margin-top: 30px">Header</div>
    </Header>
    <Footer>
        <div class="k-footer" style="margin-top: 30px">Footer</div>
    </Footer>
    <ValueTemplate>
        <strong>@((context as Product).ProductName)</strong>
    </ValueTemplate>
    <ItemTemplate>
        <strong>@((context as Product).ProductName) - @(String.Format("{0:C2}", (context as Product).UnitPrice))</strong>
    </ItemTemplate>
</TelerikDropDownList>

@functions  {
    public IEnumerable<Product> DropDownListData { get; set; }

    protected override void OnInit()
    {
        List<Product> products = new List<Product>();
        for (int i = 0; i < 10; i++)
        {
            products.Add(new Product()
            {
                ProductId = i,
                ProductName = "Product" + i.ToString(),
                SupplierId = i,
                UnitPrice = (decimal)(i * 3.14),
                UnitsInStock = (short)(i * 1),
            });
        }

        DropDownListData = products.AsQueryable();
        base.OnInit();
    }
}